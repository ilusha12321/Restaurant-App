<div class="">
  <div class="row justify-content-center">
    <div class="w-100">
      <div class="bg-primary text-white p-3 mb-3">
        <h1 class="text-center">Categories</h1>
      </div>
      <div class="row menu-items align-items-stretch p-3 text-center">
        <% @categories_items.each do |item| %>
          <div class="col-md-2 p-2 mx-auto">
            <div class="menu-item card shadow d-flex flex-column h-100">
              <div class="menu-item-image">
                <% if item.image_base64.present? %>
                  <%= link_to menu_category_path(item.category_id), class: "nav-link" do %>
                    <%= image_tag("data:image/png;base64,#{item.image_base64}", alt: "Menu Item Image", class: "img-fluid rounded-top mx-auto d-block") %>
                  <% end %>
                <% end %>
              </div>
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <% if item.image_base64.present? %>
                    <%= link_to menu_category_path(item.category_id), class: "nav-link" do %>
                      <h2 class="card-title text-center"><%= item.category_name %></h2>
                    <% end %>
                  <% else %>
                    <%= link_to menu_category_path(item.category_id), class: "nav-link" do %>
                      <h2 class="card-title text-center"><%= item.category_name %></h2>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
